editor = {Bond-Lamberty, Ben},
file = {:C\:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Goebes et al. - 2015 - Species-specific effects on throughfall kinetic energy in subtropical forest plantations are related to leaf trai.pdf:pdf},
issn = {1932-6203},
journal = {PLoS ONE},
month = {jun},
