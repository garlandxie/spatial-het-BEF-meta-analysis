issn = {00129658},
journal = {Ecology},
keywords = {ascophyllum,biodiversity,ecosystem functioning,fucus,gulf of maine,macroalgae,mastocarpus,resilience,rocky intertidal,seaweeds,spatial scale},
number = {5},
pages = {1434--1443},
