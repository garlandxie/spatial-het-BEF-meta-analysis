file = {:C\:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Thakur et al. - 2015 - Cascading effects of belowground predators on plant communities are density-dependent.pdf:pdf},
isbn = {2045-7758},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {Complementarity effects,Interspecific competition,Microbial community,N uptake,Nitrification rates,Soil food web,Trophic cascade},
month = {oct},
number = {19},
pages = {4300--4314},
pmid = {26664680},
title = {{Cascading effects of belowground predators on plant communities are density-dependent}},
