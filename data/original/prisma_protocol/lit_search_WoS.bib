isbn = {0022-0981},
issn = {00220981},
journal = {Journal of Experimental Marine Biology and Ecology},
keywords = {Acclimation,Environmental change,Litoditis marina,Outbreeding depression,Population dynamics},
month = {nov},
pages = {14--23},
title = {{Intraspecific functional trait variability does not result in higher fitness under thermal stress in a free-living marine nematode}},
