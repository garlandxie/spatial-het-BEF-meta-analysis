doi = {10.1007/s00442-013-2775-8},
file = {:C\:/Users/garla/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Flombaum, Sala, Rastetter - 2014 - Interactions among resource partitioning, sampling effect, and facilitation on the biodiversity effec.pdf:pdf},
isbn = {0029-8549},
issn = {0029-8549},
journal = {Oecologia},
