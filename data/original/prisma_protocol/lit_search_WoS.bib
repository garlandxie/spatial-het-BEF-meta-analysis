journal = {Journal of Ecology},
keywords = {Biodiversity effect,Biodiversity-productivity relationship,Complementarity effect,Plant-soil (below-ground) interactions,Plant-soil feedback,Selection effect,Soil biota,Succession},
month = {may},
number = {3},
