journal = {Ecology},
keywords = {Biodiversity-ecosystem function,Colonization,Eelgrass,Genetic diversity,Genetic relatedness,Germination,Zostera marina},
month = {dec},
number = {12},
pages = {3538--3546},
title = {{Genetic diversity of seagrass seeds influences seedling morphology and biomass}},
url = {http://doi.wiley.com/10.1002/ecy.1587},
