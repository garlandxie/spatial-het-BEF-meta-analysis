journal = {Global Ecology and Biogeography},
keywords = {Annual production,diversity effect,experiment age,fine root biomass,meta-analysis,richness,species mixtures,stand age,stand origin,transgressive overyielding},
month = {nov},
number = {11},
pages = {1387--1396},
title = {{Effects of species diversity on fine root productivity in diverse ecosystems: a global meta-analysis}},
